{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "types": ["react", "react-dom"]
  },
  "include": [
    "src/renderer.tsx",
    "src/App.tsx",
    "src/components/**/*",
    "src/stores/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/main.ts",
    "src/preload.ts",
    "src/services/**/*",
    "node_modules",
    "dist"
  ]
}
